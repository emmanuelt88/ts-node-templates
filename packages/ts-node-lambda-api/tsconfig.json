      "experimentalDecorators": true,
      "strict": false,
      "baseUrl": ".",
      "outDir": "dist",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      },
      "target": "es2017",
      "lib": [
          "es2017"
      ]
  },
  "include": [
      "src/**/*"
  ]
}