{
  "name": "ts-node-lamnda-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/api",
  "scripts": {
    "clean": "rimraf dist/* && rimraf package/*",
    "start": "node ./dist/api -p 8081",
    "start:develop": "nodemon --watch src -e ts,ejs --exec npm-run-all build start",
    "build:controllers": "webpack --mode=development --config .webpack/webpack.config.chunks.js",
    "build:develop": "webpack --mode=development --config .webpack/webpack.local.config.js && npm run build:controllers",
    "build": "npm-run-all clean build:develop build:controllers",
    "build:prod:controllers": "webpack --mode=production --config .webpack/webpack.config.chunks.js",
    "build:prod": "webpack --mode=production --config .webpack/webpack.config.js  && npm run build:prod:controllers",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "test": "mocha -r ts-node/register src/tests/**/*.spec.ts",
    "deploy": "npm run clean & npm run build:prod && serverless deploy -v"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.23",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.4",
    "@types/inversify-binding-decorators": "^2.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.11.6",
    "@types/shelljs": "^0.8.1",
    "@types/winston": "^2.4.4",
    "aws-sdk": "^2.422.0",
    "chai": "^4.2.0",
    "fs-extra": "^7.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "serverless-http": "^1.9.1",
    "serverless-offline": "^4.9.1",
    "serverless-webpack": "^5.2.0",
    "shelljs": "^0.8.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.3.3333",
    "typescript-lambda-api-local": "^0.2.0",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "inversify-binding-decorators": "^4.0.0",
    "typescript-lambda-api": "^0.3.0",
    "winston": "^3.2.1"
  }
}
