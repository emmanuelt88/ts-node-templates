{
  "include": [
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["es2018", "dom"],
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}