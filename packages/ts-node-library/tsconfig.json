{
  "extends": "./tsconfig.parent.json",
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/*",
      ],
      "@components/*": ["components/*"],
    },
  },
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**"
  ]
}